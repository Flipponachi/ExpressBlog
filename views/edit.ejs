<% include ./partials/header %>

<style type="text/css">
    .container.main{
    margin-top: 7.0em;
}
</style>


    <div class="ui main text container segment">
        <div class="ui huge header">Edit Blog</div>
        <form class="ui form" action="/blog/<%= john._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="john[name]" value="<%= john.name %>"></input>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="john[image]" value="<%= john.image %>"></input>
            </div>
            <div class="field">
                <label>Body</label>
                <textarea name="john[body]"><%= john.body%></textarea>
            </div>
            <input class="ui teal basic button" type="submit">
        </form>
    </div>
